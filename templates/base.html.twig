<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
            <h5 class="my-0 mr-md-auto font-weight-normal">Survey</h5>
            <nav class="my-2 my-md-0 mr-md-3">
                {% if is_granted('ROLE_ADMIN') %}
                    {% if app.user.getHasSurveyCompleted == false %}
                        <a class="p-2 text-dark" href="{{ path('homepage') }}">Survey</a>
                    {% endif %}
                    <a class="p-2 text-dark" href="{{ path('stats') }}">Stats</a>
                    <a class="p-2 text-dark" href="{{ path('users') }}">Users</a>
                {% endif %}
            </nav>
            {% if app.user %}
                <a class="btn btn-outline-primary" href="{{ path('app_logout') }}">Logout</a>
            {% else %}
                <a class="btn btn-outline-primary" href="{{ path('app_login') }}">Login</a>
            {% endif %}
        </div>

        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
